          .row.start-xs
            .ui.labeled.button(tabindex='0')
              .ui.red.button
                i.heart.icon
                |  Me gusta
              a.ui.basic.red.left.pointing.label
                | 1,048
            .ui.labeled.button(tabindex='0')
              .ui.basic.blue.button
                i.comment.icon
                |  Comentarios
              a.ui.basic.left.pointing.blue.label
                | 4

  //- Formulario de nuevo comentario
  .row.center-xs
    .col-xs-8
      .row.middle-xs
        .col-xs-10
          form(class="ui form")
            .field
              input(type='text', name='first-name', placeholder='Tu comentrio')
        .col-xs-2
          button.ui.red.right.labeled.icon.button
            i.right.arrow.icon
            |   Comentar
  //- Seccion de los comentarios
  .row-sm
  .comment-section.row.center-xs
    .col-xs-8.start-xs
      .ui.threaded.comments
        h3.ui.dividing.header Comentarios
        .comment
          a.avatar
            img(src='http://lorempixel.com/30/30/')
          .content
            a.author Juanito
            .metadata
              span.date 12/feb/16 a las 5:42PM
            .text
              | Â¿Que chilaquiles pican mas, los rojos o los verdes?
            .actions
