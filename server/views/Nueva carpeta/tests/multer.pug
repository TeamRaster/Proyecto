extends ../layout/layoutIndex

block title
  title Multer

block main
  .row.center-xs
    .col-xs-5
      h3 Multer
  include ../layout/errorMessage
  .row.center-xs
    .col-xs-5
      form(method="POST" action="/upload" enctype="multipart/form-data")
        .input-field.col.s12
          label(for="email") Correo:
          input(type="text", class="validate", name="email", id="email" data-length="60" required)
        .input-field.col.s12
          label(for="password") Contrase√±a:
          input(type="password", class="validate", name="password", id="password" placeholder="minimo 8 caracteres" data-length="16" required)
        .input-field.col.s12
          .file-field.input-field
            .btn
              span Imagen
              input(type="file" name="multer" required)
            .file-path-wrapper
              input(type="text" class="file-path validate")
        div
          input(type="submit", class="btn", name="btn", id="btn grey darken-3", value="Upload")
