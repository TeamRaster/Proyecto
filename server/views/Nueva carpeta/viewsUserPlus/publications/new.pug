extends ../../layout/layoutIndex

block title
  title Nuevas ofertas

block main
  .row.center-xs
    .col-xs-5
      h3 Crea una nueva oferta
  .row.center-xs
    .col-xs-5
      form(method="POST" action="/publications" enctype="multipart/form-data")
        .input-field.col.s12
          label(for="business") Empresa:
          input(type="text" class="validate" name="business" id="business" data-length="100" autofocus required)
        .input-field.col.s12
          label(class="mdl-textfield__label" for="sample5") Descripcion
          textarea.materialize-textarea(type="text" rows= "5" id="sample5" data-length="500" name="description" required)
        .input-field.col.s12
          label(for="category") Categoria:
          input(type="text" class="validate" name="category" id="category" autocomplete="off" required)
        .input-field.col.s12
          .file-field.input-field
            .btn
              span File
              input(type="file" name="image" id="image" required)
            .file-path-wrapper
              input(type="text" class="file-path validate")
        div
          input(type="submit" class="btn" name="btn" id="btn" value="Publicar")
