extends ../../layout/layoutIndex

block title
  title News Users

block main
  .row.center-xs
    .col-xs-5
      h3 Solo Administradores
  include ../../layout/errorMessage
  .row.center-xs
    .col-xs-5
      form(method="POST" action="/users" enctype="multipart/form-data")
        .input-field.col.s12
          label(for="username") Nombre de Usuario:
          input(type="text", class="validate", name="username", id="username" data-length="50" autofocus required)
        .input-field.col.s12
          label(for="email") Correo:
          input(type="email", class="validate", name="email", id="email" data-length="60" required)
        .input-field.col.s12
          label(for="password") Contrase√±a:
          input(type="password", class="validate", name="password", id="password" placeholder="8-16 caracteres" data-length="16" required)
        .input-field.col.s12
          .row.center-xs
            .col-xs-6
              input(name="options" type="radio" id="test1" value="false" checked)
              label(for="test1") Usuario
            .col-xs-6
              input(name="options" type="radio" id="test2" value="true")
              label(for="test2") Administrador
        .input-field.col.s12
          .file-field.input-field
            .btn
              span Imagen
              input(type="file" name="photo" id="photo" required)
            .file-path-wrapper
              input(type="text" class="file-path validate")
        div
          input(type="submit", class="btn", name="btn", id="btn grey darken-3", value="Crear nuevo usuario")
