extends ../../layout/layoutIndex

block title
  title Publication

block main
  .row.center-xs
    .col-xs-8
      h3 Publication
  .row.center-xs
    .col-xs-5
      form(method="POST" action="/publications/" + storedPublication._id + "?_method=PUT" enctype="multipart/form-data")
        .input-field.col.s12
          label(for="title") Titulo:
          input(type="text", class="validate", name="title", id="title" value="" + storedPublication.title)
        .input-field.col.s12
          label(for="type") Tipo:
          input(type="text", class="validate", name="type", id="type" value="" + storedPublication.typePublication disabled)
        .input-field.col.s12
          p
            if (storedPublication.typePublication == "observatory")
              input(type="radio" class="with-gap" name="types" id="observatory" value="observatory" checked)
            else
              input(type="radio" class="with-gap" name="types" id="observatory" value="observatory")
            label(for="observatory") Observatorio
          p
            if (storedPublication.typePublication == "source")
              input(type="radio" class="with-gap" name="types" id="source" value="source" checked)
            else
              input(type="radio" class="with-gap" name="types" id="source" value="source")
            label(for="source") Fuente de Informacion
          p
            if (storedPublication.typePublication == "event")
              input(type="radio" class="with-gap" name="types" id="event" value="event" checked)
            else
              input(type="radio" class="with-gap" name="types" id="event" value="event")
            label(for="event") Evento
        .input-field.col.s12
          .file-field.input-field
            .btn
              span Imagen
              input(type="file", name="image", id="image")
            .file-path-wrapper
              input(type="text", class="file-path validate" name="imageName" value="" + storedPublication.image)
        div
          input(type="submit", class="btn", name="btn", id="btn", value="Actualizar")

