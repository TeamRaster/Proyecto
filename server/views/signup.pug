extends ./templates/template
block title
  | Registro
block main
  //- Seccion del menu principal de navegacion
  include ./templates/index/header
    block menu
      li: a(href='/') Inicio
      li: a(href='/offers-demands') Oferta y Demanda
      li: a(href='/support-funds') Fondos de Apoyo
      li: a(href='/idis') I+D+I
      li: a(href='/technological-information') Perspectivas
      li: button.ui.basic.button#comenzar(data-tooltip="Esta pagina es un formulario para registrarse" data-position="bottom left" data-inverted="")
        i.icon.sign.up
        |   Iniciar sesion

  include ./templates/errorMessage
  .container
    .container_signin
      .main
        form.ui.form(method="POST" action="/accounts/signup")
          .field
            label Correo Electronico
            input(type='email', name='email', placeholder='Correo Electronico')
          .field
            label Contraseña
            input(type='password', name='password', placeholder='Contraseña')
          button.ui.button(type='submit') Registrarme
          p Ya tengo cuenta
            a(href="/accounts/signin") Iniciar sesion
